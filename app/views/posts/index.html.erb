<h1 class="text-center mt-4"><i class="fas fa-camera text-info"></i><span class="title-text text-secondary"> Photos</span></h1>

<div class="index-content">
  <div class="photos mt-3">
    <% @posts.each do |post| %>
      <%= cl_image_tag post.photo.key, height: 200, width: 200, crop: :fill, class: "photo-card" %>
    <% end %>
  </div>
</div>

  <% if user_signed_in? && current_user.admin?%>
    <div class="buttons text-center">
      <%= link_to "New", new_post_path, class:"btn btn-info mt-4 mb-2" %>
    </div>
  <%end%>
