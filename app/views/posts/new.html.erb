<h1 class="text-center mt-4"><i class="fas fa-dog text-info"></i><span class="title-text text-secondary"> New post</span></h1>

<div class="m-4">
  <%= simple_form_for @post do |f| %>
    <%= f.input :photo, as: :file %>
    <%= f.input :legend, label: 'Photo legend' %>
    <%= f.button :submit, "Post", class:"btn btn-info mt-2 mb-2 pr-4 pl-4 mr-2" %>
    <%=link_to "Back", posts_path, class:"btn btn-secondary mt-2 mb-2 pr-4 pl-4 mr-2"%>
  <% end %>

</div>
